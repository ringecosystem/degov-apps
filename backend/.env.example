
# Server Configuration, default port is 8080
# PORT=8080

# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=degov_apps
DB_PORT=5432
# DB_SSLMODE=disable # (default)

# Application Environment
# Possible values: development, staging, production (default)
# APP_ENV=production

# Logging Configuration
# Possible values: json (default), console
# LOG_FORMAT=json

# Authentication Configuration
JWT_SECRET=your_jwt_secret
# For development (APP_ENV=development) only - disable nonce verification on login (UNSAFE)
# UNSAFE_ENABLE_VERIFY_NONCE_ON_LOGIN=true

# # Background Task Configuration
# # DAO Sync Task
# TASK_DAO_SYNC_ENABLED=true
# TASK_DAO_SYNC_INTERVAL=5m

# # Notification Cleanup Task
# TASK_NOTIFICATION_CLEANUP_ENABLED=true
# TASK_NOTIFICATION_CLEANUP_INTERVAL=30m

# # Proposal Tracking Task
# TASK_PROPOSAL_TRACKING_ENABLED=true
# TASK_PROPOSAL_TRACKING_INTERVAL=3m

## registry config, default use latest tag
## use tag
# REGISTRY_CONFIG_MODE=tag
# REGISTRY_CONFIG_REFS=v0.0.1
## use branch
# REGISTRY_CONFIG_MODE=branch
# REGISTRY_CONFIG_REFS=main
